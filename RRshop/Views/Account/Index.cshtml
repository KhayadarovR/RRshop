@{
    ViewData["Title"] = "Account";
}
@using RRshop.Data
@model User



<div class="container text-center">
    <div class="row align-items-end">
        @if (User.IsInRole(Roles.Root) || User.IsInRole(Roles.Admin))
        {
            <div class="col d-grid gap-2">
                <ul class="navbar-nav flex-grow-1 btn-group my-3">
                    <h2 class="text-md-center">Панель управления</h2>
                    <li class="nav-item my-1">
                        <a class="btn btn-danger text-dark" asp-area="" asp-controller="Home" asp-action="Index">Магазин</a>
                    </li>
                    <li class="nav-item my-1">
                        <a class="btn btn-danger" asp-area="" asp-controller="Categories" asp-action="Index">Категории</a>
                    </li>
                    <li class="nav-item my-1">
                        <a class="btn btn-danger" asp-area="" asp-controller="Prods" asp-action="Index">Товары</a>
                    </li>
                    <li class="nav-item my-1">
                        <a class="btn btn-warning" asp-area="" asp-controller="Users" asp-action="Index">!Пользователи!</a>
                    </li>
                </ul>
            </div>
        }
        
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="data:image/png;base64," class="card-img-top" alt="">
                <div class="card-body">
                    <h6 class="card-title">@Model.Id</h6>
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Phone</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Дата регистрации: @Model.CreateTime</li>
                    <li class="list-group-item">Город: @Model.City</li>
                    <li class="list-group-item">Роль: @Model.Role</li>
                </ul>
            </div>
            <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Выйти</a>
        </div>

    </div>
</div>

<div class="text-center">
</div>