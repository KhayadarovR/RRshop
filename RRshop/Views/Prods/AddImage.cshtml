@model RRshop.ViewModels.ImageModel

@{
    ViewData["Title"] = "AddImage";
}

<h1>AddImage</h1>

<h4>Prod</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdId" />
            <p>@Model.ProdId</p>

            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" accept="image/jpeg,image/jpg,image/png"/>
            <span asp-validation-for="ImageFile" class="text-danger"></span>

            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
