@using RRshop.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims
@model List<UserCart>;

<h6>Корзина @User.FindFirst(ClaimTypes.MobilePhone).Value </h6>
<h5>В обработке ...</h5>

@if (Model.Count == 0)
{
    <div class="align-content-center">
        <a class="btn btn-dark" asp-action="Index" asp-controller="Home"> Перейти в магазин </a>
        <img style="width: 700px" src="https://matsuri72.ru/images/empty-cart.png"/>
    </div>
}
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Товар
            </th>
            <th>
                Категория
            </th>
            <th>
                Цвет
            </th>
            <th>
                Изображение
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prod.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prod.Category.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prod.Color)
                </td>
                <td>
                    <img src="~/img/prod/@item.Prod.ImgPath" class="img-thumbnail" style="height: 100px" alt="Responsive image" />
                </td>
            </tr>
        }
        </tbody>
    </table>
}
